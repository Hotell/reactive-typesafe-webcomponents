{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "./ts-output",
    "jsxFactory": "h",
    "jsx": "react",
    "importHelpers": true,
    "baseUrl": "./",
    "rootDir": "./",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "react": ["custom-types/react"],
      "react-dom": ["custom-types/react-dom"],
      "skatejs": ["custom-types/skatejs"],
      "@skatejs/*": ["custom-types/@skatejs/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "ts-output"]
}
